/* pages/movieList/movieList.wxss */
.container {font-size: 14px;}
.top-wrapper {height: 500rpx;}
.swiper {height: 100%;}
.swiper-image{position: absolute;width: 100%;height: 100%;}
.movie-type {position: relative;padding: 20rpx 30rpx;}
.movie-type .arrow {position: absolute;top: 20rpx;right: 30rpx;width: 28rpx;height: 28rpx;}
.movie-type .arrow image{width: 100%;height: 100%;}
.movie-list{display: flex;flex-direction: row;flex-wrap: nowrap;height: 300rpx;box-sizing: border-box;width: 100%;}
.movie-list-item{width: 200rpx;height: 200rpx;padding: 0 10rpx;box-sizing: border-box;flex: 0 0 auto;}
.scroll-image{width: 100%;height: 100%;}
.navigator-hover{color: #ff6200;}